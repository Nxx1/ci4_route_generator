{
    "name": "akara/codeigniter_route_generator",
    "description": "Codeigniter 4 Route Generator",
    "version": "1.0.0",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "codeigniter",
        "codeigniter4",
        "route",
        "generator"
    ],
    "authors": [
        {
            "name": "Akara Distira",
            "email": "npratama028@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/nxx1/ci4_route_generator",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "codeigniter/coding-standard": "1.7.*",
        "codeigniter4/devkit": "^1.3.0",
        "codeigniter4/framework": "^4.2.3",
        "phpunit/phpunit": "^11.5",
        "rector/rector": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Akara\\RouteGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": [
            "Composer\\Config::disableProcessTimeout",
            "phpstan analyze",
            "psalm",
            "rector process --dry-run"
        ],
        "sa": "@analyze",
        "ci": [
            "Composer\\Config::disableProcessTimeout",
            "@cs",
            "@deduplicate",
            "@inspect",
            "@analyze",
            "@test"
        ],
        "cs": "php-cs-fixer fix --ansi --verbose --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff --using-cache=yes",
        "style": "@cs-fix",
        "deduplicate": "phpcpd src/ tests/",
        "inspect": "deptrac analyze --cache-file=build/deptrac.cache",
        "mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
        "test": "phpunit"
    }
}